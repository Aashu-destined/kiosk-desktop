{
  "name": "kiosk-transaction-manager",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "description": "Desktop application for Kiosk Transaction Management",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "package": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.kiosk.transaction-manager",
    "publish": {
      "provider": "github"
    },
    "asarUnpack": [
      "**/node_modules/better-sqlite3"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.16"
  }
}
